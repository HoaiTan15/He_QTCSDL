@model IEnumerable<QL_Kho.Models.SANPHAM>

@{
    ViewBag.Title = "Tìm kiếm sản phẩm";
}

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                <li class="breadcrumb-item active">Tìm kiếm</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Search Header -->
<div class="search-header mb-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">
                        <i class="fas fa-search text-primary"></i> Tìm kiếm sản phẩm
                    </h3>
                    <form action="@Url.Action("TimKiem", "Home")" method="get" class="search-form">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-white">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text"
                                   name="keyword"
                                   class="form-control border-start-0"
                                   placeholder="Nhập tên sản phẩm cần tìm... (VD: iPhone, Samsung...)"
                                   value="@ViewBag.Keyword"
                                   autofocus>
                            <button class="btn btn-primary px-4" type="submit">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                    </form>

                    <!-- Popular Keywords -->
                    <div class="popular-keywords mt-3">
                        <small class="text-muted d-block mb-2">
                            <i class="fas fa-fire text-danger"></i> Từ khóa phổ biến:
                        </small>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="@Url.Action("TimKiem", "Home", new { keyword = "iPhone" })" class="badge bg-light text-dark">iPhone</a>
                            <a href="@Url.Action("TimKiem", "Home", new { keyword = "Samsung" })" class="badge bg-light text-dark">Samsung</a>
                            <a href="@Url.Action("TimKiem", "Home", new { keyword = "Xiaomi" })" class="badge bg-light text-dark">Xiaomi</a>
                            <a href="@Url.Action("TimKiem", "Home", new { keyword = "Oppo" })" class="badge bg-light text-dark">Oppo</a>
                            <a href="@Url.Action("TimKiem", "Home", new { keyword = "Vivo" })" class="badge bg-light text-dark">Vivo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search Results -->
@if (!string.IsNullOrEmpty(ViewBag.Keyword))
{
    <div class="search-results">
        <div class="results-header mb-4">
            <h4>
                Kết quả tìm kiếm cho: <strong class="text-primary">"@ViewBag.Keyword"</strong>
            </h4>
            <p class="text-muted">
                Tìm thấy <strong>@ViewBag.SoLuongKetQua</strong> sản phẩm
            </p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="card h-100 product-card shadow-sm">
                            <!-- Product Image -->
                            <a href="@Url.Action("ChiTiet", "Home", new { id = item.MaSP })" class="product-image-link">
                                @if (!string.IsNullOrEmpty(item.HinhAnh))
                                {
                                    <img src="~/Content/images/@item.HinhAnh"
                                         class="card-img-top product-image"
                                         alt="@item.TenSP"
                                         onerror="this.src='https://via.placeholder.com/300x300/667eea/ffffff?text=No+Image'">
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/300x300/667eea/ffffff?text=@item.TenSP"
                                         class="card-img-top product-image"
                                         alt="@item.TenSP">
                                }
                            </a>

                            <!-- Product Badge -->
                            @if (item.SoLuongTon <= 0)
                            {
                                <span class="badge bg-danger product-badge">Hết hàng</span>
                            }
                            else if (item.SoLuongTon <= 10)
                            {
                                <span class="badge bg-warning product-badge">Sắp hết</span>
                            }

                            <!-- Product Info -->
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title product-name">
                                    <a href="@Url.Action("ChiTiet", "Home", new { id = item.MaSP })" class="text-decoration-none text-dark">
                                        @item.TenSP
                                    </a>
                                </h6>

                                <!-- Rating -->
                                <div class="product-rating mb-2">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <small class="text-muted">(4.8)</small>
                                </div>

                                <!-- Price -->
                                <div class="product-price mb-2">
                                    <span class="h5 text-danger mb-0">
                                        @string.Format("{0:N0}", item.DonGia) đ
                                    </span>
                                </div>

                                <!-- Stock Info -->
                                <div class="stock-info mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-box"></i>
                                        @if (item.SoLuongTon > 0)
                                        {
                                            <span class="text-success">Còn @item.SoLuongTon</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Hết hàng</span>
                                        }
                                    </small>
                                </div>

                                <!-- Actions -->
                                <div class="mt-auto">
                                    @if (item.SoLuongTon > 0)
                                    {
                                        <div class="d-grid gap-2">
                                            <a href="@Url.Action("ChiTiet", "Home", new { id = item.MaSP })"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye"></i> Xem chi tiết
                                            </a>
                                            <button onclick="addToCart('@item.MaSP')" class="btn btn-primary btn-sm">
                                                <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm w-100" disabled>
                                            <i class="fas fa-ban"></i> Hết hàng
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-results text-center py-5">
                <i class="fas fa-search fa-5x text-muted mb-4"></i>
                <h3 class="mb-3">Không tìm thấy sản phẩm nào</h3>
                <p class="text-muted mb-4">
                    Không có sản phẩm nào phù hợp với từ khóa "<strong>@ViewBag.Keyword</strong>"
                </p>
                <div class="suggestions">
                    <h5 class="mb-3">Gợi ý:</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check-circle text-success"></i> Kiểm tra lại chính tả</li>
                        <li><i class="fas fa-check-circle text-success"></i> Thử từ khóa khác</li>
                        <li><i class="fas fa-check-circle text-success"></i> Tìm kiếm với từ khóa tổng quát hơn</li>
                    </ul>
                </div>
                <a href="@Url.Action("SanPham", "Home")" class="btn btn-primary mt-3">
                    <i class="fas fa-th"></i> Xem tất cả sản phẩm
                </a>
            </div>
        }
    </div>
}
else
{
    <!-- Recently Viewed / Suggestions -->
    <div class="suggestions-section">
        <h4 class="mb-4">
            <i class="fas fa-star text-warning"></i> Gợi ý cho bạn
        </h4>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="suggestion-card p-4 text-center rounded border">
                    <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                    <h5>Điện thoại iPhone</h5>
                    <p class="text-muted">Khám phá dòng iPhone mới nhất</p>
                    <a href="@Url.Action("DanhMuc", "Home", new { id = "DM001" })" class="btn btn-outline-primary btn-sm">
                        Xem ngay
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="suggestion-card p-4 text-center rounded border">
                    <i class="fab fa-android fa-3x text-success mb-3"></i>
                    <h5>Samsung Galaxy</h5>
                    <p class="text-muted">Công nghệ AI tiên tiến</p>
                    <a href="@Url.Action("DanhMuc", "Home", new { id = "DM002" })" class="btn btn-outline-success btn-sm">
                        Xem ngay
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="suggestion-card p-4 text-center rounded border">
                    <i class="fas fa-tag fa-3x text-danger mb-3"></i>
                    <h5>Khuyến mãi hot</h5>
                    <p class="text-muted">Giảm giá lên đến 30%</p>
                    <a href="@Url.Action("SanPham", "Home")" class="btn btn-outline-danger btn-sm">
                        Xem ngay
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section styles {
    <style>
        .search-form .input-group {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .search-form input {
            border: 2px solid #e3e6f0;
        }

        .search-form input:focus {
            box-shadow: none;
            border-color: #667eea;
        }

        .popular-keywords .badge {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.3s;
            text-decoration: none;
            border: 1px solid #dee2e6;
        }

        .popular-keywords .badge:hover {
            background: #667eea !important;
            color: white !important;
            transform: translateY(-2px);
            box-shadow: 0 0.25rem 0.5rem rgba(102, 126, 234, 0.3);
        }

        .product-card {
            position: relative;
            transition: all 0.3s;
            border: 1px solid #e3e6f0;
            border-radius: 10px;
            overflow: hidden;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
        }

        .product-image-link {
            display: block;
            overflow: hidden;
        }

        .product-image {
            height: 250px;
            width: 100%;
            object-fit: cover;
            transition: all 0.3s;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .product-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
            padding: 0.35rem 0.65rem;
        }

        .product-name {
            min-height: 48px;
            font-size: 1rem;
            font-weight: 600;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-name a {
            transition: color 0.3s;
        }

        .product-name a:hover {
            color: #667eea !important;
        }

        .product-rating {
            font-size: 0.875rem;
        }

        .product-price {
            font-weight: 700;
        }

        .suggestion-card {
            transition: all 0.3s;
            background: white;
        }

        .suggestion-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .no-results {
            background: white;
            border-radius: 10px;
            padding: 3rem 2rem;
        }

        .no-results ul li {
            padding: 0.5rem 0;
            font-size: 1.1rem;
        }

        .results-header {
            background: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

    </style>
}

@section scripts {
    <script>
        function addToCart(maSP) {
            @if (Session["UserID"] == null)
            {
                <text>
                if (confirm('Bạn cần đăng nhập để thêm vào giỏ hàng. Chuyển đến trang đăng nhập?')) {
                    window.location.href = '@Url.Action("Login", "Account")';
                }
                return;
                </text>
            }

            $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: 'POST',
                data: { maSP: maSP, soLuong: 1 },
                success: function (response) {
                    if (response.success) {
                        $('.badge-notification').text(response.cartCount);
                        showToast('Đã thêm vào giỏ hàng!', 'success');
                    } else {
                        showToast(response.message || 'Có lỗi xảy ra!', 'error');
                    }
                },
                error: function () {
                    showToast('Có lỗi xảy ra. Vui lòng thử lại!', 'error');
                }
            });
        }

        function showToast(message, type) {
            const bgColor = type === 'success' ? '#1cc88a' : '#e74a3b';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

            const toast = $(`
                <div class="toast-message" style="position: fixed; top: 80px; right: 20px; z-index: 9999; background: ${bgColor}; color: white; padding: 1rem 1.5rem; border-radius: 0.5rem; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15); animation: slideIn 0.3s ease;">
                    <i class="fas ${icon} me-2"></i>${message}
                </div>
            `);

            $('body').append(toast);

            setTimeout(() => {
                toast.fadeOut(300, function() {
                    $(this).remove();
                });
            }, 3000);
        }
    </script>
}