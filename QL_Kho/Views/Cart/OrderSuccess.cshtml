@{
    ViewBag.Title = "Đặt hàng thành công";
    var maDH = Request.QueryString["maDH"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Card -->
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <!-- Success Icon -->
                    <div class="success-icon mb-4">
                        <div class="success-checkmark">
                            <div class="check-icon">
                                <span class="icon-line line-tip"></span>
                                <span class="icon-line line-long"></span>
                                <div class="icon-circle"></div>
                                <div class="icon-fix"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Success Message -->
                    <h2 class="text-success mb-3">
                        <i class="fas fa-check-circle"></i> Đặt hàng thành công!
                    </h2>
                    <p class="lead text-muted mb-4">
                        Cảm ơn bạn đã đặt hàng. Đơn hàng của bạn đã được tiếp nhận và đang được xử lý.
                    </p>

                    <!-- Order Info -->
                    <div class="order-info-box mb-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-receipt text-primary"></i>
                                    <div>
                                        <small class="text-muted d-block">Mã đơn hàng</small>
                                        <strong class="text-primary">@maDH</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-calendar text-success"></i>
                                    <div>
                                        <small class="text-muted d-block">Ngày đặt</small>
                                        <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Timeline -->
                    <div class="order-timeline mb-4">
                        <h5 class="mb-3">Trạng thái đơn hàng</h5>
                        <div class="timeline">
                            <div class="timeline-item active">
                                <div class="timeline-icon">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6>Đơn hàng đã đặt</h6>
                                    <small>@DateTime.Now.ToString("dd/MM HH:mm")</small>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-icon">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6>Đang chuẩn bị</h6>
                                    <small>Dự kiến 1-2 giờ</small>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-icon">
                                    <i class="fas fa-truck"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6>Đang giao hàng</h6>
                                    <small>Dự kiến 1-3 ngày</small>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-icon">
                                    <i class="fas fa-home"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6>Đã giao hàng</h6>
                                    <small>Hoàn tất</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Info Alert -->
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Lưu ý:</strong> Chúng tôi đã gửi email xác nhận đơn hàng đến địa chỉ của bạn.
                        Vui lòng kiểm tra email để biết thêm chi tiết.
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <a href="@Url.Action("DonHangCuaToi", "Account")" class="btn btn-primary btn-lg">
                            <i class="fas fa-list"></i> Xem đơn hàng
                        </a>
                        <a href="@Url.Action("SanPham", "Home")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-shopping-bag"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Support -->
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <i class="fas fa-headset fa-3x text-primary"></i>
                        </div>
                        <div class="col-md-7">
                            <h6 class="mb-1">Cần hỗ trợ?</h6>
                            <p class="text-muted mb-0">Liên hệ với chúng tôi qua hotline hoặc email</p>
                        </div>
                        <div class="col-md-3 text-end">
                            <a href="@Url.Action("LienHe", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-phone"></i> Liên hệ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles {
    <style>
        /* Success Icon Animation */
        .success-icon {
            margin: 0 auto;
        }

        .success-checkmark {
            width: 80px;
            height: 80px;
            margin: 0 auto;
        }

        .check-icon {
            width: 80px;
            height: 80px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid #4CAF50;
        }

        .check-icon::before {
            top: 3px;
            left: -2px;
            width: 30px;
            transform-origin: 100% 50%;
            border-radius: 100px 0 0 100px;
        }

        .check-icon::after {
            top: 0;
            left: 30px;
            width: 60px;
            transform-origin: 0 50%;
            border-radius: 0 100px 100px 0;
            animation: rotate-circle 4.25s ease-in;
        }

        .icon-line {
            height: 5px;
            background-color: #4CAF50;
            display: block;
            border-radius: 2px;
            position: absolute;
            z-index: 10;
        }

        .icon-line.line-tip {
            top: 46px;
            left: 14px;
            width: 25px;
            transform: rotate(45deg);
            animation: icon-line-tip 0.75s;
        }

        .icon-line.line-long {
            top: 38px;
            right: 8px;
            width: 47px;
            transform: rotate(-45deg);
            animation: icon-line-long 0.75s;
        }

        .icon-circle {
            top: -4px;
            left: -4px;
            z-index: 10;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            position: absolute;
            box-sizing: content-box;
            border: 4px solid rgba(76, 175, 80, 0.5);
        }

        .icon-fix {
            top: 8px;
            width: 5px;
            left: 26px;
            z-index: 1;
            height: 85px;
            position: absolute;
            transform: rotate(-45deg);
            background-color: white;
        }

        /* Order Info Box */
        .order-info-box {
            background: linear-gradient(135deg, #f8f9fc 0%, #e3e6f0 100%);
            border-radius: 15px;
            padding: 2rem;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .info-item i {
            font-size: 2rem;
        }

        /* Timeline */
        .order-timeline {
            padding: 2rem 0;
        }

        .timeline {
            display: flex;
            justify-content: space-between;
            position: relative;
            padding: 0 1rem;
        }

        .timeline::before {
            content: '';
            position: absolute;
            top: 30px;
            left: 0;
            right: 0;
            height: 4px;
            background: #e3e6f0;
            z-index: 0;
        }

        .timeline-item {
            flex: 1;
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .timeline-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: white;
            border: 4px solid #e3e6f0;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.5rem;
            color: #858796;
            transition: all 0.3s ease;
        }

        .timeline-item.active .timeline-icon {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-color: #667eea;
            color: white;
            box-shadow: 0 0.5rem 1rem rgba(102, 126, 234, 0.3);
        }

        .timeline-content h6 {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .timeline-content small {
            font-size: 0.75rem;
            color: #858796;
        }

    </style>
}