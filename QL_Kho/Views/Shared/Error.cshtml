@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Lỗi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fas fa-exclamation-triangle"></i> Đã xảy ra lỗi</h2>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <h4>@Model. Exception.GetType().Name</h4>
                        <p class="text-danger">@Model. Exception.Message</p>

                        <h5 class="mt-4">Chi tiết:</h5>
                        <pre class="bg-light p-3 rounded">@Model.Exception.StackTrace</pre>
                    }
                    else
                    {
                        <p>Đã xảy ra lỗi không xác định.  Vui lòng thử lại sau.</p>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>