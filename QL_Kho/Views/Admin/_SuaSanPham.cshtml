@model QL_Kho.ViewModels.SanPhamSqlVM

<!-- Modal Sửa sản phẩm -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="fas fa-edit"></i> Chỉnh sửa sản phẩm
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="editProductForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" name="MaSP" value="@Model.MaSP" />
                    <input type="hidden" name="HinhAnh" value="@Model.HinhAnh" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                <input type="text" name="TenSP" class="form-control" value="@Model.TenSP" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Danh mục <span class="text-danger">*</span></label>
                                <select name="MaDM" class="form-control" required>
                                    <option value="">-- Chọn danh mục --</option>
                                    @foreach (var dm in ViewBag.DanhMucList)
                                    {
                                        <option value="@dm.MaDM" @(dm.MaDM.Trim() == Model.MaDM?.Trim() ? "selected" : "")>
                                            @dm.TenDM
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Nhà cung cấp</label>
                                <select name="MaNCC" class="form-control">
                                    <option value="">-- Chọn nhà cung cấp --</option>
                                    @foreach (var ncc in ViewBag.NhaCungCapList)
                                    {
                                        <option value="@ncc.MaNCC" @(ncc.MaNCC?.Trim() == Model.MaNCC?.Trim() ? "selected" : "")>
                                            @ncc.TenNCC
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Đơn vị tính <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="DonViTinh" value="@Model.DonViTinh" required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label class="form-label">Đơn giá <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" name="DonGia" value="@Model.DonGia" min="0" step="1000" required />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label class="form-label">Số lượng tồn</label>
                                <input type="number" class="form-control" name="SoLuongTon" value="@Model.SoLuongTon" min="0" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                                <select class="form-control" name="TrangThai" required>
                                    <option value="HoatDong" @(Model.TrangThai == "HoatDong" ? "selected" : "")>Hoạt động</option>
                                    <option value="HetHang" @(Model.TrangThai == "HetHang" ? "selected" : "")>Hết hàng</option>
                                    <option value="KhongHoatDong" @(Model.TrangThai == "KhongHoatDong" ? "selected" : "")>Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" name="MoTa" rows="3" placeholder="Mô tả chi tiết về sản phẩm...">@Model.MoTa</textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Hình ảnh hiện tại</label>
                        <div class="mb-2">
                            <img src="~/Content/images/@Model.HinhAnh"
                                 class="img-thumbnail"
                                 style="width: 100px; height: 100px; object-fit:cover;"
                                 onerror="this.src='https://via.placeholder.com/100x100?text=N/A'" />
                        </div>
                        <input type="file" name="HinhAnh" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Chọn file ảnh mới nếu muốn thay đổi</small>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('#editProductForm').on('submit', function (e) {
        e.preventDefault();

        var formData = new FormData(this);
        var submitBtn = $(this).find('button[type="submit"]');
        submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang cập nhật...');

        $.ajax({
            url: '@Url.Action("CapNhatSanPham", "Admin")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                submitBtn.prop('disabled', false).html('<i class="fas fa-save"></i> Cập nhật');

                if (response.success) {
                    $('#editModal').modal('hide');
                    alert('✓ ' + response.message);
                    location.reload();
                } else {
                    alert('✗ Lỗi: ' + response.message);
                }
            },
            error: function (xhr) {
                submitBtn.prop('disabled', false).html('<i class="fas fa-save"></i> Cập nhật');

                var errorMsg = 'Có lỗi xảy ra khi cập nhật sản phẩm!';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMsg = xhr.responseJSON.message;
                }
                alert('✗ ' + errorMsg);
            }
        });
    });
</script>