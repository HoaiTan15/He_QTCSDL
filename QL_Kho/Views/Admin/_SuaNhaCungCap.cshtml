@model QL_Kho.Models.ViewModels.NhaCungCapSqlVM

<!-- Modal Sửa nhà cung cấp -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="fas fa-edit"></i> Chỉnh sửa nhà cung cấp
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="editSupplierForm">
                <div class="modal-body">
                    <input type="hidden" name="MaNCC" value="@Model.MaNCC" />

                    <!-- Mã nhà cung cấp (không cho sửa) -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-barcode"></i> Mã nhà cung cấp
                        </label>
                        <input type="text" class="form-control bg-light" value="@Model.MaNCC" disabled />
                        <small class="text-muted">
                            <i class="fas fa-lock"></i> Mã nhà cung cấp không thể thay đổi
                        </small>
                    </div>

                    <!-- Tên nhà cung cấp -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-building"></i> Tên nhà cung cấp <span class="text-danger">*</span>
                        </label>
                        <input type="text" name="TenNCC" class="form-control" value="@Model.TenNCC"
                               placeholder="Nhập tên nhà cung cấp" required maxlength="100" />
                        <div class="invalid-feedback">
                            Vui lòng nhập tên nhà cung cấp!
                        </div>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt"></i> Địa chỉ
                        </label>
                        <input type="text" class="form-control" name="DiaChi" value="@Model.DiaChi"
                               placeholder="Nhập địa chỉ" maxlength="100" />
                    </div>

                    <div class="row">
                        <!-- Số điện thoại -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone"></i> Số điện thoại
                                </label>
                                <input type="tel" class="form-control" name="SDT" value="@Model.SDT"
                                       placeholder="Nhập số điện thoại" maxlength="15" />
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope"></i> Email
                                </label>
                                <input type="email" class="form-control" name="Email" value="@Model.Email"
                                       placeholder="Nhập email" maxlength="100" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Trạng thái -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-toggle-on"></i> Trạng thái <span class="text-danger">*</span>
                                </label>
                                <select class="form-control" name="TrangThai" required>
                                    <option value="HoatDong" @(Model.TrangThai == "HoatDong" ? "selected" : "")>
                                        ✓ Hoạt động
                                    </option>
                                    <option value="KhongHoatDong" @(Model.TrangThai == "KhongHoatDong" ? "selected" : "")>
                                        ✗ Không hoạt động
                                    </option>
                                </select>
                                @if (Model.SoLuongSP > 0)
                                {
                                    <small class="text-warning d-block mt-1">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        Nhà cung cấp đang có <strong>@Model.SoLuongSP sản phẩm</strong> hoạt động
                                    </small>
                                }
                            </div>
                        </div>

                        <!-- Ngày tạo (chỉ hiển thị) -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar-plus"></i> Ngày tạo
                                </label>
                                <input type="text" class="form-control bg-light"
                                       value="@(Model.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle"></i>
                        <strong>Lưu ý:</strong> Các thông tin liên hệ (SĐT, Email) sẽ được sử dụng để liên lạc với nhà cung cấp.
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('#editSupplierForm').on('submit', function (e) {
        e.preventDefault();

        // Validation
        var tenNCC = $('input[name="TenNCC"]').val().trim();
        if (!tenNCC) {
            alert('Vui lòng nhập tên nhà cung cấp!');
            $('input[name="TenNCC"]').focus();
            return;
        }

        var formData = {
            MaNCC: $('input[name="MaNCC"]').val(),
            TenNCC: tenNCC,
            DiaChi: $('input[name="DiaChi"]').val(),
            SDT: $('input[name="SDT"]').val(),
            Email: $('input[name="Email"]').val(),
            TrangThai: $('select[name="TrangThai"]').val()
        };

        var submitBtn = $(this).find('button[type="submit"]');
        submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Đang cập nhật...');

        $.ajax({
            url: '@Url.Action("CapNhatNhaCungCap", "Admin")',
            type: 'POST',
            data: formData,
            success: function (response) {
                submitBtn.prop('disabled', false).html('<i class="fas fa-save"></i> Cập nhật');

                if (response.success) {
                    $('#editModal').modal('hide');
                    alert('✓ ' + response.message);
                    location.reload();
                } else {
                    alert('✗ Lỗi: ' + response.message);
                }
            },
            error: function (xhr) {
                submitBtn.prop('disabled', false).html('<i class="fas fa-save"></i> Cập nhật');

                var errorMsg = 'Có lỗi xảy ra khi cập nhật nhà cung cấp!';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMsg = xhr.responseJSON.message;
                }
                alert('✗ ' + errorMsg);
                console.error('Error:', xhr);
            }
        });
    });

    // Reset form khi đóng modal
    $('#editModal').on('hidden.bs.modal', function () {
        $('#editSupplierForm')[0].reset();
    });
</script>

<style>
    .form-label.fw-bold {
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }
</style>