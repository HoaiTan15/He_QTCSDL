@model QL_Kho.Models.ViewModels.NhaCungCapSqlVM

<!-- Modal Chi tiết nhà cung cấp -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle"></i> Chi tiết nhà cung cấp
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card border-0">
                            <div class="card-body">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th width="200" class="text-muted">
                                                <i class="fas fa-barcode"></i> Mã nhà cung cấp:
                                            </th>
                                            <td><span class="badge bg-secondary fs-6">@Model.MaNCC</span></td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">
                                                <i class="fas fa-building"></i> Tên nhà cung cấp:
                                            </th>
                                            <td><strong class="h5 text-primary">@Model.TenNCC</strong></td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">
                                                <i class="fas fa-map-marker-alt"></i> Địa chỉ:
                                            </th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.DiaChi))
                                                {
                                                    <span class="text-dark">@Model.DiaChi</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Chưa cập nhật</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">
                                                <i class="fas fa-phone"></i> Số điện thoại:
                                            </th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.SDT))
                                                {
                                                    <a href="tel:@Model.SDT" class="text-success text-decoration-none">
                                                        <i class="fas fa-phone-alt"></i> @Model.SDT
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Chưa cập nhật</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">
                                                <i class="fas fa-envelope"></i> Email:
                                            </th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.Email))
                                                {
                                                    <a href="mailto:@Model.Email" class="text-primary text-decoration-none">
                                                        <i class="fas fa-envelope"></i> @Model.Email
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Chưa cập nhật</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">
                                                <i class="fas fa-boxes"></i> Số sản phẩm cung cấp:
                                            </th>
                                            <td>
                                                @if (Model.SoLuongSP > 0)
                                                {
                                                    <span class="badge bg-primary fs-6">
                                                        <i class="fas fa-cube"></i> @Model.SoLuongSP sản phẩm
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-inbox"></i> Chưa có sản phẩm
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">
                                                <i class="fas fa-toggle-on"></i> Trạng thái:
                                            </th>
                                            <td>
                                                @if (Model.TrangThai == "HoatDong")
                                                {
                                                    <span class="badge bg-success fs-6">
                                                        <i class="fas fa-check-circle"></i> Hoạt động
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary fs-6">
                                                        <i class="fas fa-times-circle"></i> Không hoạt động
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">
                                                <i class="fas fa-calendar-plus"></i> Ngày tạo:
                                            </th>
                                            <td>
                                                @if (Model.NgayTao.HasValue)
                                                {
                                                    <span class="text-dark">
                                                        <i class="far fa-clock"></i>
                                                        @Model.NgayTao.Value.ToString("dd/MM/yyyy HH:mm")
                                                    </span>
                                                    <small class="text-muted ms-2">
                                                        (@Math.Floor((DateTime.Now - Model.NgayTao.Value).TotalDays) ngày trước)
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                @if (Model.SoLuongSP > 0)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-chart-line"></i>
                        <strong>Thống kê:</strong> Nhà cung cấp này đang cung cấp <strong>@Model.SoLuongSP sản phẩm</strong> hoạt động.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Lưu ý:</strong> Nhà cung cấp này chưa có sản phẩm nào.
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Đóng
                </button>
                <button type="button" class="btn btn-warning" onclick="editSupplier('@Model.MaNCC'); $('#detailModal').modal('hide');">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </button>
            </div>
        </div>
    </div>
</div>