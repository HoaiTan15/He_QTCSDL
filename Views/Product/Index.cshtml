@model IEnumerable<QuanLyKho.Models.Product>
@{
    ViewBag.Title = "Sản phẩm";
}
<h2>Danh sách sản phẩm</h2>

<p><a class="btn btn-success" href="@Url.Action("Create")">Thêm sản phẩm</a></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id=item.ProductID })">Sửa</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id=item.ProductID })">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
