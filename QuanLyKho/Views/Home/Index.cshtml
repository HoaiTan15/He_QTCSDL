@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dashboard";
    var isAdmin = Session["User"] != null;
}

<div class="container-fluid">

    <div class="row mt-3 mb-4">
        <div class="col-12">
            <h2 class="fw-bold">📊 Bảng điều khiển quản lý kho</h2>
        </div>
    </div>

    @if (!isAdmin)
    {
        <!-- Chưa đăng nhập -->
        <div class="alert alert-info">
            Vui lòng <a href="@Url.Action("Login", "Account")">đăng nhập</a> để xem chi tiết.
        </div>
        <div class="card shadow-sm">
            <div class="card-header bg-light">Sản phẩm hiện có</div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên</th>
                            <th>Số lượng</th>
                            <th>Ngày cập nhật</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>SP001</td>
                            <td>Bàn phím cơ</td>
                            <td>15</td>
                            <td>13/09/2025</td>
                        </tr>
                        <tr>
                            <td>SP002</td>
                            <td>Chuột Logitech</td>
                            <td>20</td>
                            <td>14/09/2025</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <!-- KPI cards -->
        <div class="row g-3">
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-start border-4 border-primary">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Tổng sản phẩm</h6>
                            <h3>@ViewBag.TotalProducts</h3>
                        </div>
                        <i class="bi bi-box-seam display-6 text-primary"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-start border-4 border-warning">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Sản phẩm thấp tồn</h6>
                            <h3 class="text-warning">@ViewBag.LowStockCount</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle display-6 text-warning"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-start border-4 border-success">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Khách hàng</h6>
                            <h3>@ViewBag.TotalCustomers</h3>
                        </div>
                        <i class="bi bi-people display-6 text-success"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-start border-4 border-info">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Nhà cung cấp</h6>
                            <h3>@ViewBag.TotalSuppliers</h3>
                        </div>
                        <i class="bi bi-truck display-6 text-info"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row mt-4">
            <div class="col-lg-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">Phân bố sản phẩm theo danh mục</div>
                    <div class="card-body">
                        <canvas id="chartCategoryDistribution"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">Xu hướng nhập – xuất trong tháng</div>
                    <div class="card-body">
                        <canvas id="chartStockMovement"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent activities -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">Hoạt động gần đây</div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Mã SP</th>
                                    <th>Tên</th>
                                    <th>Số lượng</th>
                                    <th>Thao tác</th>
                                    <th>Ngày giờ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>SP003</td>
                                    <td>Tai nghe Sony</td>
                                    <td>50</td>
                                    <td>Nhập kho</td>
                                    <td>14/09/2025 10:00</td>
                                </tr>
                                <tr>
                                    <td>SP002</td>
                                    <td>Chuột Logitech</td>
                                    <td>-5</td>
                                    <td>Xuất kho</td>
                                    <td>14/09/2025 14:30</td>
                                </tr>
                            </tbody>
                        </table>

                        <a class="btn btn-primary mt-3" href="@Url.Action("Index","Product")">
                            Quản lý sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Pie chart
        const ctx1 = document.getElementById('chartCategoryDistribution');
        if (ctx1) {
            new Chart(ctx1, {
                type: 'pie',
                data: {
                    labels: ['Linh kiện', 'Thiết bị', 'Phụ kiện'],
                    datasets: [{ data: [12, 19, 7], backgroundColor: ['#007bff', '#ffc107', '#17a2b8'] }]
                }
            });
        }

        // Bar chart
        const ctx2 = document.getElementById('chartStockMovement');
        if (ctx2) {
            new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: ['Tuần 1', 'Tuần 2', 'Tuần 3', 'Tuần 4'],
                    datasets: [
                        { label: 'Nhập kho', data: [50, 40, 70, 60], backgroundColor: '#28a745' },
                        { label: 'Xuất kho', data: [30, 35, 60, 55], backgroundColor: '#dc3545' }
                    ]
                }
            });
        }
    </script>
}
